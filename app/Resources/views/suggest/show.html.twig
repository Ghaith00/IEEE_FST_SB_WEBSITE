{% extends 'base.html.twig' %}

{% block body %}
    <h1>Suggest</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suggest.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ suggest.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if suggest.date %}{{ suggest.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('suggest_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('suggest_edit', { 'id': suggest.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
